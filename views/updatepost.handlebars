<div class="card">
    <h3 class="card-header">Update Post</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" id="title-update-post" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="content">Content</label>
        <input name="content" type="text" id="content-update-post" value="{{post.content}}" class="form-input" />
        <button type="submit" id="update-post" class="btn btn-primary">Update Post</button>
        <button type="button" id="delete-post" class="btn btn-warning">Delete Post</button>
    </form>
</div>